---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Badge from "../components/Badge.astro";
import Linkedin from "../components/icons/Linkedin.astro";
import SocialPill from "../components/SocialPill.astro";
import Github from "../components/icons/Github.astro";
import Mail from "../components/icons/Mail.astro";
import Experience from "../components/Experience.astro";
import Briefcase from "../components/icons/Briefcase.astro";
import Code from "../components/icons/Code.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio Willian Arévalo - Desarrollador y Programador Web"
  description="Content description"
>
  <main class="mx-auto px-4 xl:px-0">
    <Section className="pt-24 xl:pt-48" id="sobre-mi">
      <img
        src="https://github.com/WillianArevalo.png"
        alt="willian photo"
        class="mb-4 rounded-full w-12 h-12"
      />
      <h1
        class="flex flex-row justify-center gap-4 mb-8 font-bold text-3xl text-zinc-900 sm:text-5xl dark:text-white"
      >
        Hola, soy Willian <div class="flex items-center">
          <Badge>Developer</Badge>
        </div>
      </h1>
      <h2 class="opacity-80 text-lg text-zinc-800 sm:text-xl dark:text-white">
        <span class="font-semibold text-yellow-500 dark:text-yellow-300"
          >Web Developer</span
        >, enfocado en aprender nuevas tecnologías. Soy estudiante de Desarrollo
        de Software que cuenta con experiencia en distintas tecnologías.
      </h2>

      <nav
        class="flex flex-row flex-wrap gap-4 mt-8 text-black dark:text-white"
      >
        <SocialPill
          href="https://www.linkedin.com/in/willianarevalo/"
          target="_blank"
        >
          <Linkedin class="size-4 sm:size-5" />
          Linkedin
        </SocialPill>
        <SocialPill href="https://github.com/WillianArevalo" target="_blank">
          <Github class="size-4 sm:size-5" />
          Github
        </SocialPill>
        <SocialPill href="mailto:awillianernesto@gmail.com" target="_blank">
          <Mail class="size-4 sm:size-5" />
          awillianernesto@gmail.com
        </SocialPill>
      </nav>
    </Section>

    <Section className="pt-12 xl:pt-24" id="experiencia">
      <h2
        class="flex flex-row items-center gap-x-2 mb-4 font-semibold text-2xl text-zinc-800 dark:text-white"
      >
        <Briefcase class="size-7" />
        Experiencia
      </h2>
      <Experience />
    </Section>

    <Section className="pt-12 xl:pt-24" id="proyectos">
      <h2
        class="flex flex-row items-center gap-x-2 mb-4 font-semibold text-2xl text-zinc-800 dark:text-white"
      >
        <Code class="size-7" />
        Proyectos
      </h2>
      <Projects />
    </Section>
  </main>
</Layout>
