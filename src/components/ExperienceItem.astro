---
export interface Props {
  date: string;
  title: string;
  description: string;
  link?: string;
}

const { date, title, description, link } = Astro.props as Props;
---

<div
  class="absolute border-zinc-300 bg-zinc-400 mt-1.5 border rounded-full w-3 h-3 -start-1.5"
>
</div>
<time
  class="mb-1 font-normal text-sm text-zinc-600 dark:text-zinc-400 leading-none"
>
  {date}
</time>
<h3 class="font-semibold text-lg text-yellow-500 dark:text-yellow-300">
  {title}
</h3>
<p
  class="mb-4 font-normal text-balance text-base text-left text-zinc-600 dark:text-zinc-400"
>
  {description}
</p>
{
  link && (
    <a
      href={link}
      class="inline-flex focus:z-10 items-center border-gray-200 dark:border-gray-600 bg-white hover:bg-gray-100 dark:hover:bg-gray-700 dark:bg-gray-800 px-4 py-2 border rounded-lg focus:ring-4 focus:ring-gray-100 dark:focus:ring-gray-700 font-medium text-gray-900 text-sm hover:text-blue-700 focus:outline-none dark:hover:text-white focus:text-blue-700 dark:text-gray-400"
    >
      Learn more...{" "}
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )
}
