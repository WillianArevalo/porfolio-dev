---
import ThemeToggle from "./ThemeToggle.astro";
---

<header
  class="top-4 z-10 sticky flex justify-center items-center mx-auto px-4 py-2 rounded-full xl:w-max"
>
  <nav
    class="flex flex-row flex-wrap justify-center items-center gap-x-6 gap-y-4 xl:gap-x-10 opacity-80 text-sm sm:text-base me-4"
  >
    <a href="#sobre-mi" class="text-zinc-800 dark:text-white">Sobre mi</a>
    <a href="#experiencia" class="text-zinc-800 dark:text-white">Experiencia</a>
    <a href="#proyectos" class="text-zinc-800 dark:text-white">Proyectos</a>
  </nav>
  <ThemeToggle defaultTheme="light" />
</header>

<style>
  header {
    background: rgba(255, 255, 255, 0.1);
    box-shadow: 0 8px 32px 0 rgba(84, 84, 84, 0.1);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    border: none;
  }
</style>
