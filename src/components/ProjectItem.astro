---
import Github from "./icons/Github.astro";
import Link from "./icons/Link.astro";
import Keyboard from "./icons/Keyboard.astro";

export interface Props {
  image: string;
  title: string;
  description: string;
  url: string;
  github: string;
  in_development: boolean;
}

const { image, title, description, url, github, in_development } =
  Astro.props as Props;
---

<div
  class="flex flex-col border-zinc-400 dark:border-zinc-700/50 border rounded-lg overflow-hidden"
>
  <img
    src={image}
    alt={title}
    class="w-full h-60 transition-all duration-300 object-cover"
  />
  <div class="flex flex-col gap-y-1 p-4">
    <slot name="tags" />
    <h3 class="font-semibold text-lg text-zinc-800 dark:text-white bg">
      {title}
    </h3>
    <p class="text-sm text-zinc-600 dark:text-zinc-300">{description}</p>
    <div class="flex justify-end items-center gap-x-2 mt-4">
      {
        in_development && (
          <span class="flex items-center gap-x-2 bg-blue-900 bg-opacity-10 px-2 py-1 rounded-full text-blue-500 text-sm">
            <Keyboard class="size-4" />
            En desarrollo...
          </span>
        )
      }
    </div>
  </div>
  <div class="flex flex-row justify-end items-center gap-2 mt-auto px-4 pb-4">
    {
      url && (
        <a
          href={url}
          target="_blank"
          class="flex items-center gap-x-1 border-zinc-400 dark:border-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-900 px-4 py-2 border rounded-full text-sm text-zinc-600 dark:text-zinc-300"
        >
          <Link class="size-4" />
          <span class="text-sm md:text-base">Ver proyecto</span>
        </a>
      )
    }

    <a
      href={github}
      target="_blank"
      class="flex items-center gap-x-1 border-zinc-400 dark:border-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-900 px-4 py-2 border rounded-full text-sm text-zinc-600 dark:text-zinc-300"
    >
      <Github class="size-4" />
      <span class="text-sm md:text-base">Repositorio</span>
    </a>
  </div>
</div>
